# prompt
PS1="\[\033[01;32m\]\u"
PS1="$PS1\[\033[00m\]:"
PS1="$PS1\[\033[01;33m\]\$(git branch --show-current 2>/dev/null)"
PS1="$PS1\[\033[01;34m\]\w"
PS1="$PS1\[\033[00m\]\$ "
# title
PS1="\[\e]0;\w\a\]$PS1"

# use neovim as a manpager
export MANPAGER='nvim +Man!'

# start autojump
source /usr/share/autojump/autojump.sh

